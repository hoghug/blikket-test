{% stylesheet %}
  .iat__wrapper {
    display: grid;
    grid-template-columns: 0.8fr 1fr;
  }

  .iat__wrapper > div {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  @media (max-width: 768px) {
    .iat__wrapper {
      display: flex;
      flex-direction: column-reverse;
      gap: 32px;
    }
    .iat__wrapper {
      grid-template-columns: 1fr;
    }
  }

  /* Image Col */
  .iat__wrapper > .iat__image {
    align-items: flex-start;
  }

  .iat__image img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    max-width: 100%;
    max-height: 100vh;
  }

  /* Content Col*/
  .iat__content {
    align-items: center;
    padding: 0 32px;
  }

  @media screen and (max-width: 768px) {
    .iat__content {
      padding: 0 20px; 
    }
  }
  
  .iat__content > div {
    max-width: 500px;
  }
  .iat__content .iat__header {
    color: #282460;
    font-family: "Helvetica Neue", sans-serif;
    font-size: 30px;
    font-weight: 500;
    line-height: 110%;
    margin: 0 0 32px 0;
    text-align: center;
  }
  
  @media screen and (min-width: 769px) {
    .iat__content .iat__header {
      font-size: 48px;
      background: linear-gradient(90deg, #2a2662 0%, #8384bd 100%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-align: left;
    }
  }

  @media screen and (min-width: 769px) {
    .iat__content .iat__header > span {
      background: #282460;
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
  }

  .iat__content .iat__subheader {
    color: #282460;
    opacity: 0.4;
    font-family: "Roboto Flex", sans-serif; /* can't get Product Sans font */
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    line-height: 150%;
    margin: 0 0 16px 0;
    text-align: center;
  }
  @media screen and (min-width: 769px) {
    .iat__content .iat__subheader {
      text-align: left;
    }
  }

  .iat__content .iat__paragraph {
    color: #414141;
    font-family: "Roboto Flex", sans-serif;
    font-size: 16px;
    line-height: 140%;
    margin: 0 0 32px 0;
  }
  .iat__content .iat__btn {
    background: #282460;
    color: white;
    text-decoration: none;
    padding: 8px 24px;
    border-radius: 100px;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    gap: 8px;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-family: "Helvetica Neue", sans-serif;
    font-weight: 500;
    font-size: 16px;
    transition: opacity 0.2s ease;
  }
  .iat__content .iat__btn:hover {
    opacity: 0.8;
  }
  @media screen and (max-width: 768px) {
    .iat__content .iat__btn {
      display: flex;
    }
  }
  
{% endstylesheet %}

<div class="container container-full">
  <div class="iat__wrapper">
    <div class="iat__image">
      {% if section.settings.image %}
        {{ section.settings.image | image_url: width: 1000 | image_tag: alt: section.settings.image.alt }}
      {% endif %}
    </div>
    <div class="iat__content">
      <div>
        {% for block in section.blocks %}
          {% case block.type %}
            {% when 'heading' %}
              <h2 class="iat__header">{{ block.settings.title }}</h2>
            {% when 'subheading' %}
              <h4 class="iat__subheader">{{ block.settings.title }}</h4>
            {% when 'paragraph' %}
              <p class="iat__paragraph">{{ block.settings.text }}</p>
            {% when 'button' %}
              <div class="iat__btn-wrapper">
                <a href="{{ block.settings.url }}" class="iat__btn">
                  <span>{{ block.settings.title }}</span>
                  {% if block.settings.show_arrow %}
                    <svg class="iat__btn__arrow" xmlns="http://www.w3.org/2000/svg" width="21" height="21" viewBox="0 0 21 21" fill="none">
                      <path d="M4.07761 9.07604H13.7326L9.98261 5.32604L11.1609 4.14771L16.9226 9.90937L11.1609 15.671L9.98261 14.4927L13.7326 10.7427H4.07761V9.07604Z" fill="white"></path>
                    </svg>
                  {% endif %}
                </a>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Image and Text",
  "presets": [
    {
      "name": "Image and Text"
    }
  ],  
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {"value": "image-left", "label": "Image Left"},
        {"value": "image-right", "label": "Image Right"}
      ],
      "default": "image-left"
    }    
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Text"
        }
      ]
    },
    {
      "type": "subheading",
      "name": "Subheading",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Text"
        }
      ]
    },
    {
      "type": "paragraph",
      "name": "Paragraph",
      "settings": [
        {
          "type": "textarea",
          "id": "text",
          "label": "Text"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Button Link"
        },
        {
          "type": "checkbox",
          "id": "show_arrow",
          "label": "Show Arrow",
          "default": true
        }
      ]
    }
  ]
}
{% endschema %}